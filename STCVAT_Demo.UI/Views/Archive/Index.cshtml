@model List<STCAPI.Core.Entities.InvoiceDetails.UploadInvoiceDetails>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Archive

        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Index" asp-controller="Home"><i class="fa fa-dashboard"></i> Home</a></li>

            <li class="active"> Archive</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Archive List</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Created By</th>
                                    <th>Created  Date</th>
                                    <th>Invoice Name</th>
                                    <th>Attachments</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.InvoiceName</td>
                                        <td> 
                                        <a href="@item.Attachments" class="btn btn-primary btn-sm" download="download"  ><i class="fa fa-download"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>  